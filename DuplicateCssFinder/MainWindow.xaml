<Window x:Class="DuplicateCssFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Duplicate Css Finder" Height="480" Width="854" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="Paragraph">
            <Setter Property="Paragraph.Background" Value="#FFF6F6F6"></Setter>
            <Setter Property="Paragraph.BorderThickness" Value="1,1,1,1"></Setter>
            <Setter Property="Paragraph.BorderBrush" Value="#FFDDDDDD"></Setter>
            <Setter Property="Paragraph.Padding" Value="10"></Setter>
            <Setter Property="Paragraph.FontFamily" Value="Consolas"></Setter>
            <Setter Property="Paragraph.FontSize" Value="12"></Setter>
        </Style>
        <Style x:Key="Path">
            <Setter Property="Run.Foreground" Value="ForestGreen"></Setter>
        </Style>
    </Window.Resources>
    <FlowDocumentScrollViewer Name="Viewer" IsToolBarVisible="True" Zoom="100">
    </FlowDocumentScrollViewer>
</Window>
